header.header
    nav.nav.nav--tours
        a.nav__el(href='#')
        form.nav__search
            button.nav__search-btn
                svg
                    use(xlink:href='/img/icons.svg#icon-search')
            input.nav__search-input(type="text" placeholder="Search tours")
    .header__logo
        a(href=`/`)
            img(src="/img/logo-white.png" alt='Natours logo')
    nav.nav.nav--user
        if user
            a.nav__el.nav__el--logout(href='#') Log out
            a.nav__el(href='/account')
                img.nav__user-img(src=`/img/users/${user.photo}` alt=`${user.name}`)
                span= user.name
        else
            a.nav__el(href="/login") Login
            a.nav__el.nav__el--cta(href="#") Sign in